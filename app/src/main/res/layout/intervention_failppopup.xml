<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="520dp"
    android:layout_gravity="center"
    android:background="@color/dangerRed"
    android:orientation="vertical"
    android:padding="5dp">



    <ImageView
        android:id="@+id/closePopupf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_close_black_24dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="25dp"
            android:text="නැවත උත්සාහ කරන්න​"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/errorimg"
            android:layout_width="81dp"
            android:layout_height="88dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:clickable="false"
            android:focusable="true"
            android:src="@drawable/error" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="@color/White"
            android:text="ගතවූ කාලය :"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeFromChronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="@color/White"
            android:text="වැරදි වචන​:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/misspelled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="@color/White"
            android:text="සාර්ථකත්වය​:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/perc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/rewardpoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="   5 Points      "
            android:textSize="40dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/rewards"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:clickable="false"
            android:focusable="true"
            android:src="@drawable/rewards" />



    </LinearLayout>

    <Button
        android:id="@+id/acceptBtnf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonblack"
        android:text="OK" />

</LinearLayout>