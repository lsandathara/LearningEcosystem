<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ResultActivity">

    <RelativeLayout
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/titlebar_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="ප්‍රතිඵල"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contents_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/titlebar_layout">

            <LinearLayout
                android:id="@+id/ll1"
                android:padding="10dp"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:text="ගතවුනු කාලය : "/>
                <TextView
                android:id="@+id/tvTime"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:text="00:00:00"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2"
                android:padding="10dp"
                android:layout_below="@id/ll1"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:text="නිවැරදි ගණන : "/>
                <TextView
                    android:id="@+id/tvCorrectCount"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:text="00/10"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll3"
                android:padding="10dp"
                android:layout_below="@id/ll2"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="බබා"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llWrong"
                android:layout_below="@id/ll3"
                android:padding="10dp"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnTryAgain"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="නැවත බලමු"
                    android:background="@color/colorAccent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnSkip"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="ප්‍රධාන මෙනුවට"
                    android:background="@color/colorAccent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>